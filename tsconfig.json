{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["scripts/*"],
      "@lib/*": ["scripts/lib/*"]
    }
  },
  "include": ["scripts/**/*.ts"]
}
